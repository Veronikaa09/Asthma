<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lime"
    tools:context=".TentangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="TENTANG APLIKASI"
            android:layout_marginTop="15dp"
            android:textColor="@color/ebony"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/ebony"
            android:text="Dataset Kaggle : "
            android:textStyle="bold"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/ebony"
            android:text="https://www.kaggle.com/datasets/rabieelkharoua/asthma-disease-dataset"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Tujuan aplikasi : "
            android:textStyle="bold"
            android:textColor="@color/ebony"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="Untuk membantu mendeteksi seseorang apakah menderita penyakit asma atau tidak serta mencegah kekambuhan asma."
            android:textColor="@color/ebony"
            android:textSize="19dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/ebony"
            android:text="Cara menggunakan aplikasi : "
            android:textStyle="bold"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="Buka aplikasi Asthma Disease dan mulai untuk memprediksi."
            android:textColor="@color/ebony"
            android:textSize="19dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>